pipeline {
	agent any
	tools {
	    maven "MAVEN3"
	    jdk "JDK-11-JDK"
	}
	stages {
        stage('preparar'){
			steps {
				script {
					def timestamp = new Date().format('yy/MM/dd_HH:mm')
                    env.BUILD_VERSION = "${timestamp}"
				}
			}
		}
		stage('Build'){
	        steps{
	           sh 'mvn install -DskipTests'
	        }

	        post {
	           success {
	              echo 'Now Archiving it...'
	              archiveArtifacts artifacts: '**/target/*.war'
	            }
	        }
	    }
		stage('version'){
			steps{
				sh 'cp /target/vprofile-v2.war artefato-${env.BUILD_VERSION}.war'
			}
		}
	    stage('publicar'){
			steps{
				archiveArtifacts artifacts: "artefato-${env.BUILD_VERSION}.war", fingerprint: true
			}
		}
		stage('UNIT TEST') {
            steps{
                sh 'mvn test'
            }
        }
        stage('Checkstyle Analysis'){
            steps {
                sh 'mvn checkstyle:checkstyle'
            }
        }
    }
}
pipeline {
	agent any
	tools {
	    maven "MAVEN3"
	    jdk "JDK-11-JDK"
	}
	stages {
        stage('Build'){
	        steps{
	           sh 'mvn install -DskipTests'
	        }

	        post {
	           success {
	              echo 'Now Archiving it...'
	              archiveArtifacts artifacts: '**/target/*.war'
	           }
	        }
	    }
	    stage('UNIT TEST') {
            steps{
                sh 'mvn test'
            }
        }
        stage('Checkstyle Analysis'){
            steps {
                sh 'mvn checkstyle:checkstyle'
            }
        }
        stage('version'){
            steps {
                script {
                    mkdir -p versions
                    cp target/vprofile-v2.war versions/vprofile-V$BUILD_ID.war
                }
            }
        }
    }
}

